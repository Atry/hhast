set -ex

DIR="$(dirname "$0")"
rm -rf "$DIR/../codegen"
mkdir "$DIR/../codegen"
hh_parse --schema > "$DIR/../codegen/schema.json"
exec hhvm -d hhvm.hack.lang.look_for_typechecker=0 "$DIR/update-codegen" --rebuild-relationships "$@"
